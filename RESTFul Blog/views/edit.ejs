<%-   include ("partials/header.ejs")      %>



<div class="container mt-3">


  <h1>Edit Your Blog</h1>





   <form action="/blogs/<%=blog._id%>?_method=PUT" method="POST">

  <div class="form-group">
    <label for="inputTitle">Title</label>
    <input name="blog[title]" type="text" class="form-control" id="inputTitle" value="<%=blog.title%>">
  </div>


  <div class="form-group">
    <label for="inputImage">Image Url</label>
    <input  name="blog[image]" type="text" class="form-control" id="inputTitle" value="<%=blog.image%>">
  </div>
  
  
  <div class="form-group">
      <label for="message">Content</label>
      <textarea class="form-control" rows="4" id="message" name="blog[content]" style="width: 90%;border-radius: 3px;"><%=blog.content%></textarea>
    </div>
    
    <!-- <div class="form-group">
      <label for="inputDate">Date</label>
      <input  name="date" type="date" class="form-control" id="inputTitle" value="<%=Date.now()%>" >
    </div> -->



  <button type="submit" class="btn btn-primary">Submit</button>
</form>














</div>







