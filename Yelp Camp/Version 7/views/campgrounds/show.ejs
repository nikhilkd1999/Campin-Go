
<%- include("../partials/header.ejs") %>


<div class="container">


    <div class="row">

        <div class="col-md-3">
            <p class="lead">
                Yelp Camp
            </p>

            <div class="list-group">
                <li class="list-group-item">Info 1</li>
                <li class="list-group-item">Info 2</li>
                <li class="list-group-item">Info 3</li>
            </div>
        </div>


        <div class="col-md-9">
            <div class="card">
                <img src="<%= campground.image %>" class="card-img-top" alt="...">
                <div class="card-body">
                    <div>
                        <h5 class="card-title float-left"><a href="#"><%=campground.name%></a></h5>
                        <h6 class="float-right">$ 69</h6>
                    </div>

                    <br>
                    <br>
                    <br>
                   
                  <p class="card-text"><%=     campground.description     %></p>
                  <!-- <a href="/campgrounds/<%=campground._id%>/comments/new" class="btn btn-primary float-right">Add New Comment</a> -->
                </div>
              </div>





              <div class="card mt-3">

                <h5 class="card-header">Comments</h5>
        
                
                <div class="card-body">
                    
                    <div class="text-right">
                        <a href="/campgrounds/<%=campground._id%>/comments/new" class="btn btn-primary">Add Comment</a>
                    </div>
        
        
                  <p class="card-text">
        
                    
                        <% campground.comments.forEach(function(comment){ %>
        
                            <div>
                                <strong class="text-left"><%=comment.author%></strong> 
                                <span class="text-right">1 day ago</span>
                            </div>
                            <p><%=comment.text%></p>
        
                        
                        <% }); %>
        
                  </p>
                        
                </div>
        
        
              </div>
        







        </div>

    </div>




    







</div>


<%- include("../partials/footer.ejs") %>