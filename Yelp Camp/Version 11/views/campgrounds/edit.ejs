<%- include("../partials/header.ejs") %>


<div class="container mt-5">
    
    
    
    <form action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST">
        
        <div class="form-group">
            <label for="exampleInputEmail1">Name</label>
            <input name="updatedCampground[name]" type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" value="<%=campground.name%>">
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">Image URL</label>
            <input name="updatedCampground[image]" type="text" class="form-control" id="exampleInputPassword1" value="<%=campground.image%>">
        </div>
        <div class="form-group">
            <label for="description">Description</label>
            <input name="updatedCampground[description]" type="text" class="form-control" id="description" value="<%=campground.description%>">
        </div>
        
        <button type="submit" class="btn btn-success">Submit</button>
        
        <a class="btn btn-danger" href="/campgrounds">Cancel</a>
        
        
        
    </form>
</div>


<%- include("../partials/footer.ejs") %>